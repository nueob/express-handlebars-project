<h1>hello, hanledbars</h1>
<p>my name is {{name}}</p>

{{! -- 조건에 따른 화면 처리 -- }}

    {{!#으로 시작해서 /로 끝난다}}
    {{#if isLoggedIn}}
    <a href="#">Logout</a>
    {{else}}
    <a href="#">Login</a>
    {{/if}}

    {{#unless isReady}}
    <button>Start</button>
    {{/unless}}

{{! -- 반복에 따른 화면 처리 -- }}

    {{#each users}}
    <span>{{this}}</span>
    {{/each}}

    {{! key 값으로 접근}}
    {{#each user as |value key|}}
    <span>{{value}}</span>
    <span>{{key}}</span>
    {{/each}}

{{! -- with/as 헬퍼 사용 -- }}
    {{#with user}}
    <span>{{name}}</span>
    {{/with}}

    {{#with user as |u|}}
    <span>{{u.name}}</span>
    {{/with}}

{{! -- 커스텀 헬퍼 사용 -- }}

    {{#ifUsernameParkoon name "parkoon"}}
    <h1>hello, parkoon</h1>
    {{else}}
    <h1>{{name}}</h1>
    {{/ifUsernameParkoon}}

